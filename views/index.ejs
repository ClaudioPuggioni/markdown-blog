<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="css/styles.css" />
    <title>Markdown Blog</title>
  </head>
  <body>
    <div id="header">Earth's Best Blog</div>
    <div id="subHeaderDiv">
      <div id="subHeader">powered by Markdown</div>
      <a href="/add"><button id="addArticleBtn">Add New Article</button></a>
    </div>
    <% articles.forEach(article => { %>
    <div class="card">
      <div class="cardTitleDiv">
        <h2><%= article.title %></h2>
        <a href="/<%= article._id %>">
          <button class="detailsBtn">
            <img class="detailsImg" src="assets/details.svg" alt="edit details" />
            <div class="bgColor"></div>
          </button>
        </a>
      </div>
      <p><%= article.created_at %></p>
      <br />
      <p><%= article.body %></p>
      <br />
      <div class="authorDiv">by <%= article.author_name %></div>
    </div>
    <% }) %>
  </body>
</html>
